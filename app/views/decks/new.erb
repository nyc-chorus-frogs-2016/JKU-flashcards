<section class='deck-game'>
  <h2>Create a new flashcard deck?</h2>

  <%if logged_in? %>
   <form action='/decks' method='post'>
    <input type='hidden' name='deck[creator_id]' <%if logged_in? %>
        </value='<%=current_user.id%>' />
    <%else%>
        />
    <%end%>
     <ul>
      <li>
        <label for='deck[name]'>Deck Name:</label>
        <input type='text' name='deck[name]'/>
      </li>
      <li>
        <input type='submit' value='Yes, create deck'/>
      </li>
   </form>

  <p><a href="/">No, take me back to the index</a></p>
  <%else%>
  <p>You must be logged in to create a new flashcard deck!</p>
  <a href = "/login">Login</a> || <a href = "/users/new">Register</a>
  <%end%>
</section>
